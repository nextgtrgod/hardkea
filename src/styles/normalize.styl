
html, body
	position relative
	min-height 100%
	width 100%
	-ms-touch-action: manipulation
	touch-action: manipulation
	height 100%
	margin 0
	padding 0
	display block
	-webkit-text-size-adjust: none
	-webkit-overflow-scrolling: touch
	-webkit-tap-highlight-color: rgba(0,0,0, 0)

html
	overflow hidden
	height 100%

body
	height 100%
	overflow auto

img
	border none
	display inline-block
	vertical-align bottom
	backface-visibility hidden

input, textarea, select, option
	margin 0
	outline 0
	box-shadow none
	vertical-align top

div
	box-sizing: border-box

section
	display block

ul
li
	margin 0
	padding 0
	list-style none

a
	color #FFF
	color currentColor
	text-decoration none

button
	background-color: transparent
	border none
	cursor pointer
	&:focus
		outline none
